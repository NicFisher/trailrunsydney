<div class="contribute-container">
  <div class="trail-header">
    <h3>CONTRIBUTE</h3>
  </div>
  <%= flash[:notice] %>
  <p class="contribute-paragraph">We are always looking for new running trails to share with the community and would love your help.<br>
  If possible, please add the Strava Route URL. This can be created <a href="https://www.strava.com/routes/new" target="_blank">here</a>.</p>
  <%= form_tag("/static_pages/contribute_thank_you") do %>
    <div class="contact-form">
      <div class="form-group">
        <%= label_tag :name %>
        <%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Name" %>
      </div>      
      <div class="form-group">
        <%= label_tag :email, "Email Address*" %>
        <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter Email", required: "true", type: "email" %>
      </div>
      <div class="form-group">
        <%= label_tag :strava_route, "Strava Route" %>
        <%= text_field_tag :strava_route, nil, class: "form-control", placeholder: "Enter Strava Route URL" %>
      </div>
      <div class="form-group">
        <%= label_tag :message, "Trail Details*" %>
        <%= text_area_tag :message, nil, class: "form-control", placeholder: "Enter Trail Details", required: "true" %>
      </div>
      <button class="btn btn-primary">
        <%= submit_tag "SEND" %>
      </button>      
    </div>
  <% end %>
</div>